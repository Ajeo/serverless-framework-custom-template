{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "rootDir": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
